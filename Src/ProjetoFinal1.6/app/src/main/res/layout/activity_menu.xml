<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_header_size"
                app:srcCompat="@drawable/appname" />

            <TextView
                android:id="@+id/categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome Restaurante"
                android:textAlignment="center"
                android:textColor="@color/castanho"
                android:textSize="@dimen/title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/prato1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entradas:"
                android:textSize="@dimen/subtitle_size" />

            <ImageView
                android:id="@+id/img_prato5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/restaurantBannerHeight"
                app:srcCompat="@drawable/food_icon" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empadas"
                android:textSize="@dimen/subsubtitle_size" />

            <TextView
                android:id="@+id/prato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pratos principais:"
                android:textSize="@dimen/subtitle_size" />

            <ImageView
                android:id="@+id/img_prato"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                app:srcCompat="@drawable/food_icon" />

            <TextView
                android:id="@+id/prato2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bebidas:"
                android:textSize="@dimen/subtitle_size" />

            <ImageView
                android:id="@+id/img_prato7"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                app:srcCompat="@drawable/food_icon" />

            <TextView
                android:id="@+id/prato7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Outros:"
                android:textSize="@dimen/subtitle_size" />

            <ImageView
                android:id="@+id/img_prato8"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                app:srcCompat="@drawable/food_icon" />
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="287dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="506dp" />

</androidx.constraintlayout.widget.ConstraintLayout>